---
// Define the array of projects directly in the frontmatter script.

import {workProjects} from "../../data/en/workprojects";

// Function to calculate `data-aos-duration` based on index
function calculateAosDuration(index: number) {
  return 1500 + index * 500; // Example: Increment duration by 500ms for each project
}
---

<section class="bg-primary dark:bg-secondary">
  <div class="px-8 2xl:max-w-7xl mx-auto py-32">
    <div class="space-y-2">
      <!-- Section Title and Decorative Elements -->
      <div
          class="h-0.5 bg-secondary dark:bg-primary"
          data-aos="fade-up"
          data-aos-duration="1000"
      >
      </div>
      <h3
          class="text-secondary dark:text-primary dark:text-primary text-base font-medium"
          data-aos="fade-up"
          data-aos-duration="1500"
      >
        <span>Latest</span>
        <span class="font-bold">projects</span>
      </h3>
    </div>

    <ul
        class="mx-auto grid grid-cols-1 sm:grid-cols-2 text-secondary dark:text-primary md:grid-cols-3 lg:grid-cols-4 items-start gap-6 mt-32"
        role="list"
    >
      {
        workProjects.map((project, index) => (
            <li
                class="flow-root h-full"
                data-aos="fade-up"
                data-aos-duration={calculateAosDuration(index)}
            >
              <div class="h-full flex flex-col justify-between">
                <div>
                  <p class="group-hover:text-secondary dark:text-primary/70 text-secondary dark:text-primary text-9xl font-black lg:rotate-90 xl:-translate-x-28 lg:-translate-x-16 lg:mb-8 xl:mb-0">
                    0{index + 1}.
                  </p>
                  <p class="italic shrink-0">{project.title}</p>
                  <p class="text-base mt-3 leading-relaxed">
                    {project.description}
                  </p>
                </div>
                <div>
                  <!--<p class="mt-3 text-base font-semibold">
                    Learn more &nbsp; â†—
                  </p>-->
                </div>
              </div>
            </li>
        ))
      }
    </ul>
  </div>
</section>
